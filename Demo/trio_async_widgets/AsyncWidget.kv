#:kivy 2.0.0

<AsyncWidget>:
	background_color: root.color
	canvas.before:
		Color:
			rgba: root.color
		Rectangle:
			size: self.size
			pos: self.pos

	label_top: inner_label_top
	label_mid: inner_label_mid
	label_bottom: inner_label_bottom
	
	Label:
		id: inner_label_top
		text: root.name
		
	Label:
		id: inner_label_mid
		text: "Nope."
		
	Label:
		id: inner_label_bottom
		text: "Nope."