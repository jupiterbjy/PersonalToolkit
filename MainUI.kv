#:kivy 2.0.0

<MainUI>:
	start_stop_wid: btn_start_stop
	listing_layout: grid_main

	BoxLayout:
		size_hint: 1, 0.1
		orientation: 'horizontal'
	
		ToggleButton:
			id: btn_start_stop
			group: 'controls'
			text: 'start'
			on_release: root.on_start_release()
			
		ToggleButton:
			id: btn_reload
			group: 'controls'
			text: 'reload'
			on_release: root.on_reload_release()
	
	GridLayout:
		size_hint: 1, 0.9
		spacing: 10
		id: grid_main
		cols: 3
		

<InnerWidget>:
	canvas.before:
		Color:
			rgba: root.bg_color
		Rectangle:
			size: self.size
			pos: self.pos
	
	label_top: inner_label_top
	label_mid: inner_label_mid
	label_bottom: inner_label_bottom
	
	Label:
		id: inner_label_top
		text: root.name
		
	Label:
		id: inner_label_mid
		text: root.output
		
	Label:
		id: inner_label_bottom
		text: root.executed_count