#:kivy 2.0.0

<MainUI>:
	start_stop_wid: btn_start_stop
	listing_layout: grid_main

	BoxLayout:
		orientation: 'horizontal'
	
		ToggleButton:
			id: btn_start_stop
			group: 'controls'
			text: 'start'
			on_release: root.on_start_release()
			
		ToggleButton:
			id: btn_reload
			group: 'controls'
			text: 'reload'
			on_release: root.on_reload_release()
	
	GridLayout:
		id: grid_main
		cols: 3
		

<InnerWidget>:
	label_top: inner_label_top
	label_mid: inner_label_mid
	label_bottom: inner_label_bottom
	
	Label:
		id: inner_label_top
		text: root.name
		
	Label:
		id: inner_label_mid
		text: "Nope."
		
	Label:
		id: inner_label_bottom
		text: "Nope."